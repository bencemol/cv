---
interface Props {
  title: string;
  href: string;
  videoSrc: string;
}

const { title, href, videoSrc } = Astro.props;
---

<style>
  .showcase-card {
    position: relative;
    border-radius: var(--radius-3);
    background-color: #fff;
    box-shadow: var(--shadow-2);
    will-change: transform;
    transition: transform 300ms var(--ease-elastic-4);
  }

  .showcase-card::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    border-radius: inherit;
    box-shadow: var(--shadow-3);
    z-index: -1;
    opacity: 0;
    transition: opacity 300ms var(--ease-elastic-4);
  }

  a {
    display: block;
    overflow: hidden;
    width: 100%;
    border-radius: inherit;
    aspect-ratio: var(--ratio-landscape);
  }

  a video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .showcase-card:hover,
  .showcase-card:focus {
    transform: scale(1.02) translateY(-2%);
  }

  .showcase-card:hover::after,
  .showcase-card:focus::after {
    opacity: 1;
  }
</style>

<div>
  <h3>{title}</h3>
  <div class="showcase-card">
    <a href={href} aria-label={title}>
      <video autoplay muted loop>
        <source src={videoSrc} />
      </video>
    </a>
  </div>
</div>
