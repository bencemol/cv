---
interface Props {
  title: string;
  href: string;
  videoSrc: string;
}

const { title, href, videoSrc } = Astro.props;
---

<style>
  a {
    display: block;
    border-radius: var(--radius-3);
    overflow: hidden;
    width: 100%;
    aspect-ratio: var(--ratio-landscape);
    background-color: #fff;
    box-shadow: var(--shadow-2);
    transition: transform 300ms var(--ease-elastic-4),
      box-shadow 300ms var(--ease-elastic-4);
  }

  a video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  a:hover,
  a:focus {
    transform: scale(1.02) translateY(-2%);
    box-shadow: var(--shadow-3);
  }
</style>

<div>
  <h3>{title}</h3>
  <a href={href} aria-label={title}>
    <video autoplay muted loop>
      <source src={videoSrc} />
    </video>
  </a>
</div>
