<style>
  footer {
    box-sizing: border-box;
    width: 100%;
    height: var(--footer-height);
    position: fixed;
    bottom: 0;
    padding: var(--size-3);
    z-index: 0;
  }

  footer p {
    text-align: center;
  }
</style>

<footer class="no-print">
  <script>
    const range = 0.2;

    const root = document.querySelector("html");
    const footer = document.querySelector("footer");

    footer.addEventListener("mousemove", (event) =>
      requestAnimationFrame(() => translateWithMouse(event))
    );

    addEventListener("deviceorientation", (event) =>
      requestAnimationFrame(() => translateWithOrientation(event))
    );

    function translateWithMouse(event) {
      const { left, top, width, height } = footer.getBoundingClientRect();
      const offsetX =
        -width * range * 0.5 + range * (event.clientX - left - width * 0.5);
      const offsetY =
        root.offsetHeight -
        height -
        height * range * 0.5 +
        range * (event.clientY - top - height * 0.5);
      root.style.setProperty("--offset-x", `${Math.floor(offsetX)}px`);
      root.style.setProperty("--offset-y", `${Math.floor(offsetY)}px`);
    }

    function translateWithOrientation(event) {
      const { left, top, width, height } = footer.getBoundingClientRect();
      const beta = Math.abs((event.beta / 180) * root.offsetHeight);
      const gamma = Math.abs((event.gamma / 90) * root.offsetWidth);
      const offsetX =
        -width * range * 0.5 + range * (gamma - left - width * 0.5);
      const offsetY =
        root.offsetHeight -
        height -
        height * range * 0.5 +
        range * (beta - top - height * 0.5);
      root.style.setProperty("--offset-x", `${Math.floor(offsetX)}px`);
      root.style.setProperty("--offset-y", `${Math.floor(offsetY)}px`);
    }
  </script>
