---
interface Props {
  title: string;
  technologies: Technology[];
}

export interface Technology {
  name: string;
  iconUrl: string;
}

const { title, technologies } = Astro.props;
---

<style>
  .technologies {
    column-count: 2;
    column-gap: var(--size-3);
    column-width: 9rem;
    padding-left: 0px;
  }

  .technology {
    display: flex;
    align-items: center;
    height: calc(var(--font-lineheight-4) * 1rem);
    gap: var(--size-3);
    margin-left: 0px;
    border-radius: var(--radius-3);
  }

  .technology:before {
    content: "";
    display: none;
  }

  .technology:not(:last-child) {
    margin-bottom: var(--size-1);
  }

  .technology img {
    height: 75%;
    display: inline-block;
    aspect-ratio: 1;
    filter: brightness(0%);
  }

  @media (prefers-color-scheme: dark) {
    .technology img {
      filter: brightness(0%) invert(1);
    }
  }
</style>

<div class="card">
  <h3>{title}</h3>
  <ul class="technologies">
    {
      technologies.map((technology) => (
        <li class="technology">
          <img alt={`${technology.name} icon`} src={technology.iconUrl} />{" "}
          {technology.name}
        </li>
      ))
    }
  </ul>
</div>
