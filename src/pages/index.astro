---
import BackendTechnologies from "../components/BackendTechnologies.astro";
import Footer from "../components/Footer.astro";
import FrontendTechnologies from "../components/FrontendTechnologies.astro";
import Header from "../components/Header.astro";
import Showcase from "../components/Showcase.astro";
import StudiesTimeline from "../components/StudiesTimeline.astro";
import WorkTimeline from "../components/WorkTimeline.astro";
import "../styles/index.css";
---

<style>
  .content {
    position: relative;
    padding-bottom: var(--size-7);
    margin-bottom: var(--footer-height);
    background-color: var(--bg-color);
    box-shadow: var(--shadow-2);
    z-index: 1;
  }

  h2 {
    padding-bottom: var(--size-2);
    border-bottom: 1px solid var(--border-color);
  }
</style>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Molnár Bence Resume" />
    <link rel="icon" type="image/svg+xml" href="./favicon.svg" />
    <title>Resume - Bence Molnár</title>
  </head>

  <body>
    <Header />
    <main class="content">
      <section class="resume-skills">
        <h2 class="uppercase">Skills</h2>
        <FrontendTechnologies />
        <BackendTechnologies />
      </section>

      <section class="resume-work">
        <h2 class="uppercase">Work</h2>
        <WorkTimeline />
      </section>
      <section class="resume-studies">
        <h2 class="uppercase">Studies</h2>
        <StudiesTimeline />
      </section>
      <section class="resume-showcase">
        <h2 class="uppercase">Snippets</h2>
        <Showcase />
      </section>
    </main>
    <Footer />
  </body>
</html>
